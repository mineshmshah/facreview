
<h1>Current Week</h1>
<section>
  <h2>Monday</h2>
    {{#each monday}}
    <article class="workshop">
      <a href="{{this.gh_link}}"><h3 class="workshop__title">{{this.title}}</h3></a>
      <p class="workshop__feels">Cohort Feel: {{this.avg_review}}</p>
      <form class="workshop__form" action="/post-review" method="post">
        <input type="hidden" name="{{this.id}}" value="{{this.id}}"/>
        <label class="workshop__label" for="rating">My rating: </label>
        <input class="workshop__radio" type="radio" name="rating" value="1" checked>1
        <input class="workshop__radio" type="radio" name="rating" value="2"> 2
        <input class="workshop__radio" type="radio" name="rating" value="3"> 3
        <input class="workshop__radio" type="radio" name="rating" value="4"> 4
        <input class="workshop__radio" type="radio" name="rating" value="5"> 5
        <button class="workshop__radio" type="submit" name="login-submit">Submit</button>
      </form>
    </article>
      {{/each}}
</section>

